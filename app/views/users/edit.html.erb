<h2>Profile編集</h2>





<div class="card-list-container py-5">

  <div class="card w-50 mx-auto mt-4 shadow-lg">

    <div class="card-body">
      <div class="row">
        <div class="col-12">
          <%= form_with model: @user, local: true do |f| %>
Name<%= f.text_field :name, autofocus: true, id: "inputname", placeholder: "名前" %><br>

Profile画像<%= f.file_field :profile_image,  placeholder: "Profile画像", accept: "image/*" %><br>

自己紹介<%= f.text_area :introduction, autofocus: true, accept: "image/*" %>

<%= f.submit "変更を保存" %>

<% end %>
        </div>
      </div>
    </div>
  </div>
</div>