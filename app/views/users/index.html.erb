<h2>User一覧</h2>

<% @users.each do |user| %>





<div class="card-list-container py-5">

  <div class="card w-50 mx-auto mt-4 shadow-lg">

    <div class="card-body">
      <div class="row">
        <div class="col-12">
<%= image_tag user.get_profile_image(70,70) %>


<%= link_to user_path(user.id) do %>
<%= user.name %>
<% end %>

<%= user.introduction %>


        </div>
      </div>
    </div>
  </div>
</div>
<% end %>