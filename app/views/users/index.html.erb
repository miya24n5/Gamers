<h1 class="h1-tagu">User一覧</h1>
<div class="container mt-5">
  <div class="row">
    <div class="col-12">
      <table class="table table-dark table-striped table-hover">
        <thead>
          <tr>
            <th>ID</th>
            <th></th>
            <th>name</th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= user.id %></td>
            <td><%= image_tag user.get_profile_image(50,50),class: "rounded-circle"; %></td>
            <td>
              <%= link_to user_path(user.id) do %>
              <%= user.name %>
              <% end %>
            </td>
            <td><%= user.introduction %></td>
            <td>
                <% if current_user.following?(user) %>
                <button type="button" class="btn btn-primary">
                  <%= link_to "フォロー中", user_relationships_path(user.id), method: :delete, class: "text-white"; %>
                </button>
                <% else %>
                <button type="button" class="btn btn-light">
                  <%= link_to "フォロー", user_relationships_path(user.id), method: :post, class: "text-dark"; %>
                </button>
                <% end %>
            </td>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
  </div>
</div>