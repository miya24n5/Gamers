<h1 class="h1-tagu"><%= @user.name %></h1>
<div class="card-list-container py-5">
  <div class="card w-50 mx-auto mt-4 shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-lg-12">
          <div class="row">
            <div class="col-lg-2">
              <%= image_tag @user.get_profile_image(100,100), class: "rounded-circle"; %>
            </div>
            <div class="col-lg-10">
              <%= @user.introduction %>
            </div>
          </div>
          <div class="row">
            <div class="col-12">
              <div class="text-right">
                <% unless current_user == @user %>
                <button type="button" class="btn btn-dark mt-3 mb-3 ">
                  <% if current_user.following?(@user) %>
                    <%= link_to "フォロー中", user_relationships_path(@user.id), method: :delete, class: "text-white" %>
                  <% else %>
                    <%= link_to "フォロー", user_relationships_path(@user.id), method: :post, class: "text-white" %>
                  <% end %>
                </button>
                <% end %>
                <% if @user == current_user %>
                <div class="text-right">
                    <%= link_to "Profile編集", edit_user_path(@user), class: "btn btn-outline-info text-info"; %>
                </div>
              <% end %>
              </div>
            </div>
          </div>
          <!--フォローフォロワーボタン-->

          <div class="row">
            <div class="col-3">
              <div class="mb-2">
              投稿数: <%= @user.games.count %>
              </div>
            </div>
            <div class="col-3">
              <%= link_to user_followings_path(@user), class: "text-dark mb-2" do %>
                <u><h6>フォロー数: <%= @user.followings.count %></h6></u>
              <% end %>
            </div>
            <div class="col-3">
              <%= link_to user_followers_path(@user), class: "text-dark mb-2" do %>
                <u><h6>フォロワー数: <%= @user.followers.count %></h6></u>
              <% end %>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>