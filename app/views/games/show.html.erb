<h1>ゲームレビュー詳細</h1>

<%= @game.title %>

<%= @game.body %>

<!--星レビュー表示-->
                <div id="star-rate-<%= @game.id %>"></div>
                <script>
                  $('#star-rate-<%= @game.id %>').raty({
                    size: 36,
                    starOff:  '<%= asset_path('star-off.png') %>',
                    starOn : '<%= asset_path('star-on.png') %>',
                    starHalf: '<%= asset_path('star-half.png') %>',
                    half: true,
                    readOnly: true,
                    score: '<%= @game.star %>',
                  });
                </script>

<!--コメントの数-->
<%= @game.game_comments.count %>件のコメント<br>

<!--コメント機能-->
<% @game.game_comments.each do |game_comment| %>
<%= image_tag game_comment.user.get_profile_image(100,100) %>
<%= game_comment.user.name %>
<%= game_comment.created_at.strftime('%Y/%m/%d') %><%= game_comment.comment %>
<% if game_comment.user == current_user %>
<%= link_to "削除", game_game_comment_path(game_comment.game, game_comment), method: :delete %>
<% end %>
<% end %>

<%= form_with model: [@game, @game_comment] do |f| %>
<%= f.text_area :comment, rows: '5', placeholder: "コメント記入欄" %>
<%= f.submit "送信" %>
<% end %>

<!--いいねボタン-->
<% if @game.favorited_by?(current_user) %>
<%= link_to game_favorites_path(@game), method: :delete do %>
❤<%= @game.favorites.count %>いいね
<% end %>
<% else %>
<%= link_to game_favorites_path(@game), method: :post do %>
♡<%= @game.favorites.count %>いいね
<% end %>
<% end %>



<!--投稿日時-->
<%= @game.created_at.strftime('%Y/%m/%d') %>


<% if @game.user == current_user %>
<%= link_to '編集', edit_game_path(@game) %>
<%= link_to '削除', game_path(@game), method: :delete, data: { confirm: '本当に削除しますか？' } %>
<% end %>