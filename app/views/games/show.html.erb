<h1 class="h1-tagu">ゲームレビュー詳細</h1>
<div class="container">
  <div class="row">
    <div class="card w-50 shadow-lg mt-3">
      <div class="card-body">
        <div class="col-12">
          <h4 class="game-title"><%= @game.title %></h4><br>
          <%= @game.body %>
          <!--星レビュー表示-->
          <div class="mt-2" id="star-rate-<%= @game.id %>">評価 </div>
            <script>
            $('#star-rate-<%= @game.id %>').empty();
              $('#star-rate-<%= @game.id %>').raty({
                  size: 36,
                  starOff:  '<%= asset_path('star-off.png') %>',
                  starOn : '<%= asset_path('star-on.png') %>',
                  starHalf: '<%= asset_path('star-half.png') %>',
                  half: true,
                  readOnly: true,
                  score: '<%= @game.star %>',
                });
              </script>
              <div class="text-right">
                <!--いいねボタンの部分テンプレート-->
              <div id="favorites_<%= @game.id %>">
                <%= render "favorites/favorites", game: @game %>
              </div>
              <!--コメントの数-->
              <div class="text-left">
                <%= @game.game_comments.count %>件のコメント<br>
              </div>
                <!--投稿日時-->
                < 投稿日時 > <%= @game.created_at.strftime('%Y/%m/%d') %>
                <% if @game.user == current_user %>
                  <button type="button" class="btn btn-outline-info ml-2">
                    <%= link_to '編集', edit_game_path(@game), class: "text-info"; %>
                  </button>
                  <button type="button" class="btn btn-outline-danger ml-2">
                    <%= link_to '削除', game_path(@game), method: :delete, data: { confirm: '本当に削除しますか？' }, class: "text-danger"; %>
                  </button>
                <% end %>
              </div>
            </div>
          </div>
        </div>
        <div class="offset-1 col-4">
          <!--コメント欄-->
          <h4 class="text-white">コメント欄</h4>
          <div class="gm-comment">
            <% @game.game_comments.each do |game_comment| %>
              <%= image_tag game_comment.user.get_profile_image(40,40),class: "rounded-circle"; %>
              <%= game_comment.user.name %>
              <%= game_comment.comment %>
              <% if game_comment.user == current_user %>
              <div class="btn btn-outline-danger text-nowrap btn-sm">
                <%= link_to "削除", game_game_comment_path(game_comment.game, game_comment), method: :delete, class: "text-danger text-right"; %>
              </div>
              <% end %>
              <div style="font-size:5px"; >
                <%= game_comment.created_at.strftime('%Y/%m/%d') %>
              </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
<div class="container mt-3">
  <div class="row">
    <div class="col-5">
      <!--コメント記入欄-->
      <%= form_with model: [@game, @game_comment] do |f| %>
        <%= f.text_area :comment, rows: '5', placeholder: "コメント記入欄", class: 'form-control' %>
        <%= f.submit "送信", class: "btn btn-secondary mt-2" %>
      <% end %>
    </div>
  </div>
</div>
