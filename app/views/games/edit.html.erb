<h1 class="h1-tagu">ゲームレビュー編集</h1>
<div class="errors-text">
  <% if @game.errors.any? %>
  <%= @game.errors.count %>件のエラーが発生しました
  <ul>
    <% @game.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>
</div>
<div class="card-list-container py-5">
  <div class="card w-50 mx-auto shadow-lg">
    <div class="card-body">
      <div class="row">
        <div class="col-12">
          <%= form_with model:@game, local:true do |f| %>
            <%= f.label :タイトル %>
            <%= f.text_field :title, class: "form-control" %>
            <%= f.label :レビュー, class: "mt-3" %>
            <%= f.text_area :body, class: "form-control" %>
            <div id="star" class="mt-2">
              <%= f.label :star, '評価' %>
              <%= f.hidden_field :star, id: :game_star %>
            </div>
            <!--星評価javascript-->
            <script>
              $('#star').empty();
              $('#star').raty({
                size     : 36,
                starOff: '<%= asset_path('star-off.png') %>',
                starOn : '<%= asset_path('star-on.png') %>',
                starHalf: '<%= asset_path('star-half.png') %>',
                scoreName: 'game[star]',
                half: true,
              });
            </script>
            <%= f.submit "編集", class: "btn btn-secondary mt-2" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>