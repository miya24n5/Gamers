<h2>ゲームレビュー編集</h2>



<div class="card-list-container py-5">

  <div class="card w-50 mx-auto mt-4 shadow-lg">

    <div class="card-body">
      <div class="row">
        <div class="col-12">
<%= form_with model:@game, local:true do |f| %>

<%= f.label :タイトル %>
<%= f.text_field :title %>

<%= f.label :レビュー %>
<%= f.text_area :body %>


<div id="star">
       <%= f.label :star, '評価' %>
       <%= f.hidden_field :star, id: :game_star %>
      </div>

     <!--星評価javascript-->
      <script>
      $('#star').raty({
        size     : 36,
        starOff: '<%= asset_path('star-off.png') %>',
        starOn : '<%= asset_path('star-on.png') %>',
        starHalf: '<%= asset_path('star-half.png') %>',

        scoreName: 'game[star]',
        half: true,
      });
      </script>


<%= f.submit "編集" %>

<% end %>

        </div>
      </div>
    </div>
  </div>
</div>