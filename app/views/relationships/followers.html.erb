<h1 class="h1-tagu">フォロワー</h1>
<div class="container ">
  <div class="row">
    <% if @users.exists? %>
      <table class='table bg-white'>
        <thead>
          <tr>
            <th></th>
            <th>name</th>
            <th></th>
            <th></th>
            <th></th>
            <th></th>
          </tr>
        </thead>
        <% @users.each do |user| %>
        <tbody>
          <tr>
            <td><%= image_tag user.get_profile_image(50,50),size: '50x50',class: "rounded-circle"; %></td>
            <td>
              <%= link_to user_path(user.id) do %>
              <%= user.name %>
              <% end %>
            </td>
            <td>投稿数<%= user.games.count %></td>
            <td>フォロー数:<%= user.followings.count %></td>
            <td>フォロワー数:<%= user.followers.count %></td>
          </tr>
        </tbody>
      </table>
      <% end %>
    <% else %>
      <button>
        ユーザーはいません
      </button>
    <% end %>
  </div>
</div>